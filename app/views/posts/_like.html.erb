<% if user_signed_in? && Like.find_by(user_id: current_user.id, post_id: post.id) %>
  <%= link_to "/posts/#{post.id}/likes/#{post.likes.ids}", method: :delete do %>
    <i class="far fa-heart"></i>
    <span><%= post.likes.count if post.likes.present? %></span>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post.id), method: :post do %>
    <i class="far fa-heart"></i>
    <span><%= post.likes.count if post.likes.present? %></span>
  <% end %>
<% end %>
